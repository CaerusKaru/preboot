{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "inlineSourceMap": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ""
  },
  "exclude": ["node_modules", "src/**/*.ts", "test/**/*.ts"],
  "files": ["browser.ts", "server.ts"]
}
